<?xml version="1.0" encoding="utf-8"?>

<local:BaseContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:local="clr-namespace:BRB6.View"
                      xmlns:Model="clr-namespace:BRB5.Model;assembly=BRB5.Model"
                       x:Class="BRB6.View.DocItem">
    <NavigationPage.TitleView>
        <StackLayout Spacing="10" Orientation="Horizontal" Padding="0,0,10,0">
            <!--<Picker x:Name="ReasonPicker"
                    IsEnabled="{Binding IsVisF5Act}"
                    IsVisible="{Binding IsVisF5Act}"
                    Title="Причина"
                    ItemsSource="{Binding Reasons}"
                    ItemDisplayBinding="{Binding NameReason}"
                    SelectedIndexChanged="SelectReason"
                    SelectedItem="{Binding SelectedReason}" />-->

        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>       
        <StackLayout>

            <StackLayout IsVisible="{Binding IsVisibleDocF6}">
                <Picker Title="дата"
                        Unfocused="DocNameFocus"
                        x:Name="DocDate"
                        ItemsSource="{Binding ListDataStr}"
                        ItemDisplayBinding="{Binding DateString}"
                        SelectedIndex="{Binding SelectedDataStr}" />
                <Frame Style="{StaticResource FrameStyle}">
                    <local:CustomEntry Style="{StaticResource EntryStyle}"
                                          x:Name="DocName"
                                          Placeholder="номер"
                                          Text="{Binding NumberOutInvoice}" >
                    </local:CustomEntry>
                </Frame>
            </StackLayout>
            <Grid RowSpacing="1"
      ColumnSpacing="1"
      Padding="1"
      BackgroundColor="#adaea7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <Label Text="Код"
           Grid.Column="0"
           BackgroundColor="White" />

                <Label Text="План"
           Grid.Column="1"
           BackgroundColor="White" />
                <Label Text="Факт"
           Grid.Column="2"
           BackgroundColor="White" />
                <Label Text="Проблемні"
           Grid.Column="3"
           BackgroundColor="White" />

            </Grid>
            <Grid VerticalOptions="StartAndExpand">
                <ScrollView>
                    <StackLayout x:Name="DocWaresStackLayout" />
                </ScrollView>
            </Grid>
            <StackLayout VerticalOptions="End" Orientation="Horizontal">

                <Label Text="F2-"
                       FontSize="16"
                       Grid.Column="6"
                       TextColor="#ff5c5c"
                       VerticalOptions="Center" />
                <Label Text="Збер"
                       FontSize="18"
                       Grid.Column="7"
                       TextColor="#816f20">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="F2Save" />
                    </Label.GestureRecognizers>
                </Label>

                <Label Text="F3-"
                       FontSize="16"
                       Grid.Column="6"
                       TextColor="#ff5c5c"
                       VerticalOptions="Center" />
                <Label Text="Скан"
                       FontSize="18"
                       Grid.Column="7"
                       TextColor="#816f20">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="F3Scan" />
                    </Label.GestureRecognizers>
                </Label>

                <Label Text="F4-"
                       FontSize="16"
                       Grid.Column="6"
                       TextColor="#ff5c5c"
                       VerticalOptions="Center" />
                <Label Text="Спис"
                       FontSize="18"
                       Grid.Column="7"
                       TextColor="#816f20">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="F4WrOff" />
                    </Label.GestureRecognizers>
                </Label>

                <Label Text="F5-" IsVisible="{Binding IsVisF5Act}"
                        FontSize="16"
                        Grid.Column="6"
                        TextColor="#ff5c5c"
                        VerticalOptions="Center" />
                <Label Text="Акт" IsVisible="{Binding IsVisF5Act}"
                        FontSize="18"
                        Grid.Column="7"
                        TextColor="#816f20">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="F5Act" />
                    </Label.GestureRecognizers>
                </Label>

                <Label Text="F6-"
                       FontSize="16"
                       Grid.Column="6"
                       TextColor="#ff5c5c"
                       VerticalOptions="Center" />
                <Label Text="Док"
                       FontSize="18"
                       Grid.Column="7"
                       TextColor="#816f20">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="F6Doc" />
                    </Label.GestureRecognizers>
                </Label>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</local:BaseContentPage>