<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BRB6.View.CreateDoc"
             Title="Створення документу">

    <Grid RowDefinitions="Auto, Auto, *, Auto, 60" Padding="10" RowSpacing="10">
        <Grid ColumnDefinitions="2*,*" ColumnSpacing="5">
            <Picker Title="Оберіть торговий зал" 
                ItemsSource="{Binding FilteredWarehousePicker}"
                ItemDisplayBinding="{Binding Name}"
                SelectedItem="{Binding SelectedWarehouse}" />
            <Entry Placeholder="Фільтр..." x:Name="WarehouseFilterEntry" Grid.Column="1"
               Unfocused="OnWarehouseFilterUnfocused" Completed="OnWarehouseFilterCompleted"/>
        </Grid>

        <VerticalStackLayout Grid.Row="1" 
                     BindableLayout.ItemsSource="{Binding QuickAccessWarehouses}"
                     Spacing="2" 
                     HorizontalOptions="Fill">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Button Text="{Binding Name}" 
                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=SelectQuickWarehouseCommand}"
                    CommandParameter="{Binding .}"
                    HeightRequest="45"
                    HorizontalOptions="Fill"
                    Margin="0,1" 
                    TextColor="White">
                        <Button.Triggers>
                            <DataTrigger TargetType="Button" Binding="{Binding IsChecked}" Value="True">
                                <Setter Property="BackgroundColor" Value="#2196F3" />
                            </DataTrigger>
                            <DataTrigger TargetType="Button" Binding="{Binding IsChecked}" Value="False">
                                <Setter Property="BackgroundColor" Value="#9E9E9E" />
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>

        <CollectionView Grid.Row="2" Margin="0,10,0,0"/>

        <VerticalStackLayout Grid.Row="3" Spacing="2">
            <Label Text="Коментар:" FontSize="12" />
            <Editor Text="{Binding Comment}" Placeholder="Введіть текст..." HeightRequest="70" />
        </VerticalStackLayout>

        <Button Text="СТВОРИТИ" Grid.Row="4" Clicked="OnCreateDocumentClicked" BackgroundColor="#4CAF50" TextColor="White" />
    </Grid>
</ContentPage>