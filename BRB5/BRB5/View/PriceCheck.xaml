                </forms:ZXingScannerView>

            <StackLayout  AbsoluteLayout.LayoutBounds="1, 1, 1, .6"  AbsoluteLayout.LayoutFlags="All" >
                <ProgressBar Progress="0.8" ProgressColor="Black" />
                <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            </StackLayout >
           
        </AbsoluteLayout>
             -->
    </ContentPage.Content>
</ContentPage>