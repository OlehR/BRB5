<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:brb5="clr-namespace:BRB5" x:DataType="brb5:Docs"
             NavigationPage.HasNavigationBar="False"
             x:Class="BRB5.Docs">

    <ContentPage.Content>
        <StackLayout>
           <!-- <Label Text="Список документів"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />-->

            <ListView x:Name="ListQuestions"
              HasUnevenRows="True"
              ItemsSource="{Binding MyDoc}" 
                      
              >
                <ListView.Header>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Документи" FontSize="25"
                           BackgroundColor="#c5cae9" HorizontalOptions="FillAndExpand" />
                    </StackLayout>
                </ListView.Header>
                <!-- ItemTapped="OnItemTapped"-->
                <ListView.ItemTemplate>
                    <DataTemplate xmlns:brb5="clr-namespace:BRB5" x:DataType="brb5:Doc">
                        <ViewCell>
                            <ViewCell.View  >
                                <StackLayout>
                                    <!--<Label Text="{Binding NameUser}" FontSize="22" />
                                    <Label Text="{Binding DateDoc}" FontSize="22" />-->
                                     <Grid Focused="Grid_Focused"  >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />                                            
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Button  Text="{Binding NumberDoc}" ClassId="Ok" Grid.Column="0" Grid.Row="0" 
            BackgroundColor="Yellow" 
            FlexLayout.AlignSelf="Stretch"   HorizontalOptions="FillAndExpand"
            Clicked="OnButtonClicked" ></Button>

                                        <Button  Text="{Binding DateDoc}" ClassId="Ok" Grid.Column="1" Grid.Row="0" 
            BackgroundColor="Yellow" 
            FlexLayout.AlignSelf="Center"  FlexLayout.Grow="1"  HorizontalOptions="FillAndExpand"
            Clicked="OnButtonClicked" ></Button>

                                        <Button  Text="{Binding CodeWarehouse}" ClassId="Ok" Grid.Column="2" Grid.Row="0" 
            BackgroundColor="Yellow" 
            FlexLayout.AlignSelf="End"  FlexLayout.Grow="1"  HorizontalOptions="FillAndExpand"
            Clicked="OnButtonClicked" ></Button>
                                        <Button  Text="{Binding Description}" ClassId="Ok" Grid.Column="0" Grid.Row="1"  Grid.ColumnSpan="2"
            BackgroundColor="LightYellow" 
            FlexLayout.AlignSelf="Center"  FlexLayout.Grow="1"  HorizontalOptions="FillAndExpand"
            Clicked="OnButtonClicked" ></Button>
                                        <Button  Text="{Binding NameUser}" ClassId="Ok" Grid.Column="2" Grid.Row="1" 
            BackgroundColor="Yellow" 
            FlexLayout.AlignSelf="End"  FlexLayout.Grow="1"  HorizontalOptions="FillAndExpand"
            Clicked="OnButtonClicked" ></Button>

                                    </Grid> 

                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>