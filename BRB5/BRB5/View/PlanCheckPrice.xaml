<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BRB5.View.PlanCheckPrice">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout RadioButtonGroup.GroupName="Type" Orientation="Horizontal"
                         RadioButtonGroup.SelectedValue="{Binding Selection}">
                <RadioButton Content="Основне Місце" Value="1" />
                <RadioButton Content="Торець" Value="2" />
            </StackLayout>

            <ListView HasUnevenRows="True" 
                  ItemsSource="{Binding PromotionList}">
                <ListView.ItemTemplate>
                    <DataTemplate xmlns:brb5="clr-namespace:BRB5">
                        <ViewCell>
                            <ViewCell.View>
                                <Button Text="{Binding Description}"
                                    FontSize="Large"
                                    Clicked="PromotionSelect"
                                    Style="{StaticResource ButtonStyle}" />
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>