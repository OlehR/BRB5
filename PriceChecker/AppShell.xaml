<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PriceChecker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PriceChecker.View"
    Shell.NavBarIsVisible="False"
    Title="PriceChecker">

    <FlyoutItem Title="Splash">
        <ShellContent
            Title="Splash"
            ContentTemplate="{DataTemplate views:SplashPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Admin Price Checker">
        <ShellContent
            Title="Admin"
            ContentTemplate="{DataTemplate views:AdminPriceChecker}" />
    </FlyoutItem>

    <FlyoutItem Title="Print Page">
        <ShellContent
            Title="Print"
            ContentTemplate="{DataTemplate views:PrintPage}" />
    </FlyoutItem>

</Shell>
