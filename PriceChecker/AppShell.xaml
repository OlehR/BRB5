<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PriceChecker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PriceChecker.View"
    Shell.NavBarIsVisible="False"
    Title="PriceChecker">
    
    <ShellContent
        Route="Splash"
        ContentTemplate="{DataTemplate views:SplashPage}" />
    <!-- Тут меню тільки для авторизованих -->
    <FlyoutItem Title="Admin Price Checker" Route="Admin">
        <ShellContent
            Title="Admin"
            ContentTemplate="{DataTemplate views:AdminPriceChecker}" />
    </FlyoutItem>

    <FlyoutItem Title="Установка цін" Route="Print1">
        <ShellContent
            Title="Print"
            ContentTemplate="{DataTemplate views:PrintPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Друк пакетів" Route="Print2">
        <ShellContent
            Title="Print"
            ContentTemplate="{DataTemplate views:PrintPage}" />
    </FlyoutItem>

</Shell>
