<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False"
             x:Class="PriceChecker.View.SplashPage"
             HideSoftInputOnTapped="True"
             >
    <Grid>
        <Image x:Name="BackgroundImage"
               Opacity="0.3"
           Aspect="AspectFill"
           Grid.RowSpan="2"
           Grid.ColumnSpan="2" />
        <Label x:Name="SettingsShow" />
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
            <Image x:Name="LogoImage" Aspect="AspectFit" HeightRequest="300"/>
            <Image Source="check_the_price.png" Aspect="AspectFit" HeightRequest="130"/>

            <Entry x:Name="InputBC" Completed="TEMPHandIput" >
                
            </Entry>

        </VerticalStackLayout>
    </Grid>

</ContentPage>