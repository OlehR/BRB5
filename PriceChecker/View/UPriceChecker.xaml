<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
             x:Class="PriceChecker.View.UPriceChecker">

    <ContentPage.Content>
        <Grid>
            <Image Source="background.png"
                    Aspect="AspectFill"                   
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2" />
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            
            <ffimageloading:CachedImage x:Name="WareImage"  Grid.Column="1"  Source="{Binding UriPicture}"/>

            <StackLayout >
                <Label Text="{Binding WP.Name}" 
                       VerticalOptions="CenterAndExpand"
                       HorizontalOptions="Center"
                       FontSize="50" FontAttributes="Bold" FontFamily="" />       

                <Entry IsVisible="{Binding IsVisBarcode}" 
                   Text="{Binding WP.BarCodes}"  
                   Placeholder="Штрих код"
                   HorizontalOptions="Start"
                       Completed="BarCodeHandInput"
                       x:Name="BarCodeInput"
                       IsReadOnly="False"/>


            </StackLayout>

            <Grid Grid.ColumnSpan="2"  Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <Label Text="Ціна:"
                       VerticalOptions="Center" FontFamily=""
                       FontSize="30"
                       Grid.Column="0"
                       TextColor="{Binding TextColorPrice}" />
                <Label Text="{Binding WP.Price}"
                       VerticalOptions="Center"
                       FontSize="40" FontAttributes="Bold" FontFamily=""
                       Grid.Column="1"
                       TextColor="{Binding TextColorPrice}" />

                <Label IsVisible="{Binding IsVisPriceOpt}" Text="Ціна опт." FontFamily=""
                       VerticalOptions="Center"
                       FontSize="30"
                       Grid.Column="2"
                       TextColor="{Binding TextColorPrice}" />
                <Label IsVisible="{Binding IsVisPriceOpt}" Text="{Binding WP.PriceOpt}"
                       VerticalOptions="Center"
                      FontSize="40" FontAttributes="Bold" FontFamily=""
                       Grid.Column="3" 
                       TextColor="{Binding TextColorPrice}" />

                <Label IsVisible="{Binding IsVisPriceOpt}" Text="к-ть опт." 
                       VerticalOptions="Center"
                       FontSize="30"
                       Grid.Column="4"
                       TextColor="Blue" />
                <Label IsVisible="{Binding IsVisPriceOpt}" Text="{Binding WP.QuantityOpt}"  
                       VerticalOptions="Center"
                       FontSize="40" FontAttributes="Bold" FontFamily=""
                       Grid.Column="5" 
                       TextColor="Blue" />

            </Grid>
        </Grid>

    </ContentPage.Content>
</ContentPage>