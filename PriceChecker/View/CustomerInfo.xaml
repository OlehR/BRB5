<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"            
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False"
             x:Class="PriceChecker.View.CustomerInfo">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="LabelLeftStyle" TargetType="Label">
                <Setter Property="FontSize" Value="22"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="HorizontalTextAlignment" Value="Start"/>
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="Margin" Value="0,0,10,0"/>
            </Style>

            <Style x:Key="LabelRightStyle" TargetType="Label">
                <Setter Property="FontSize" Value="22"/>
                <Setter Property="HorizontalTextAlignment" Value="Start"/>
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="LineBreakMode" Value="WordWrap"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <!-- Фонове зображення -->
        <Image x:Name="BackgroundImage"
               Aspect="AspectFill"
               Opacity="0.4"
               HorizontalOptions="Fill"
               VerticalOptions="Fill"/>

        <!-- Основний контент -->
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">

                <Grid ColumnDefinitions="*,Auto,*"
      VerticalOptions="Start"
      HorizontalOptions="Fill">

                    <!-- Логотип -->
                    <Image x:Name="LogoImage"
           Grid.Column="1"
           HeightRequest="80"
           HorizontalOptions="Center"
           VerticalOptions="Center" />

                    <!-- Кнопка "Вийти" -->
                    <Button Text="✖ Вийти"
            Grid.Column="2"
            HorizontalOptions="End"
            BackgroundColor="LightGray"
            TextColor="Black"
            FontSize="22"
            CornerRadius="10"
            WidthRequest="200"
            Clicked="OnCancelClicked"/>
                </Grid>
                <!-- Дані по клієнту -->
                <Frame Padding="20"
                       CornerRadius="12"
                       HasShadow="True"
                       BackgroundColor="White"
                       Opacity="0.9">
                    <VerticalStackLayout Spacing="20">

                        <Label Text="Інформація по картці"
                               FontSize="28"
                               HorizontalOptions="Center"
                               TextColor="Green"
                               FontAttributes="Bold" />

                        <Grid ColumnDefinitions="*,*"
                              RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                              RowSpacing="7"
                              HorizontalOptions="Center"
                              WidthRequest="800">

                            <Label Grid.Row="0" Grid.Column="0" Text="Ім'я:" Style="{StaticResource LabelLeftStyle}" />
                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding Client.NameClient}" Style="{StaticResource LabelRightStyle}" />

                            <Label Grid.Row="1" Grid.Column="0" Text="Сума на скарбничці:" Style="{StaticResource LabelLeftStyle}" />
                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding Client.Wallet, StringFormat='{}{0:F2}₴'}" Style="{StaticResource LabelRightStyle}" />

                            <Label Grid.Row="2" Grid.Column="0" Text="Сума бонусів:" Style="{StaticResource LabelLeftStyle}" />
                            <Label Grid.Row="2" Grid.Column="1" Text="{Binding Client.SumBonus}" Style="{StaticResource LabelRightStyle}" />

                            <Label Grid.Row="3" Grid.Column="0" Text="Сума бонусів в гривнях:" Style="{StaticResource LabelLeftStyle}" />
                            <Label Grid.Row="3" Grid.Column="1" Text="{Binding Client.SumMoneyBonus, StringFormat='{}{0:F2}₴'}" Style="{StaticResource LabelRightStyle}" />

                            <Label Grid.Row="4" Grid.Column="0" Text="Номер телефону:" Style="{StaticResource LabelLeftStyle}" />
                            <Label Grid.Row="4" Grid.Column="1" Text="{Binding Client.MainPhone}" Style="{StaticResource LabelRightStyle}" />

                            <Label Grid.Row="5" Grid.Column="0" Text="Другий номер телефону:" Style="{StaticResource LabelLeftStyle}" />
                            <Label Grid.Row="5" Grid.Column="1" Text="{Binding Client.PhoneAdd}" Style="{StaticResource LabelRightStyle}" />

                            <Label Grid.Row="6" Grid.Column="0" Text="Відсоток знижки:" Style="{StaticResource LabelLeftStyle}" />
                            <Label Grid.Row="6" Grid.Column="1" Text="{Binding Client.PersentDiscount, StringFormat='{}{0}%'}" Style="{StaticResource LabelRightStyle}" />

                            <Label Grid.Row="7" Grid.Column="0" Text="Відсоток перерахування:" Style="{StaticResource LabelLeftStyle}" />
                            <Label Grid.Row="7" Grid.Column="1" Text="{Binding Client.PercentBonusIntegers, StringFormat='{}{0}%'}" Style="{StaticResource LabelRightStyle}" />

                            <Label Grid.Row="8" Grid.Column="0" Text="Штрих-код картки:" Style="{StaticResource LabelLeftStyle}" />
                            <Label Grid.Row="8" Grid.Column="1" Text="{Binding Client.BarCode}" Style="{StaticResource LabelRightStyle}" />

                            <Label Grid.Row="9" Grid.Column="0" Text="Статус картки:" Style="{StaticResource LabelLeftStyle}" />
                            <Label Grid.Row="9" Grid.Column="1" Text="{Binding Client.TranslatedStatusCard}" Style="{StaticResource LabelRightStyle}" />

                            <Label Grid.Row="10" Grid.Column="0" Text="Дата народження:" Style="{StaticResource LabelLeftStyle}" />
                            <Label Grid.Row="10" Grid.Column="1" Text="{Binding Client.BirthDay, StringFormat='{}{0:dd/MM/yyyy}'}" Style="{StaticResource LabelRightStyle}" />

                            <Label Grid.Row="11" Grid.Column="0" Text="Подарунковий сертифікат:" Style="{StaticResource LabelLeftStyle}" />
                            <Label Grid.Row="11" Grid.Column="1" Text="{Binding Client.IsСertificate}" Style="{StaticResource LabelRightStyle}" />
                        </Grid>

                        
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
